{
  "base_url": "http://127.0.0.1",
  "auth_token": null,
  "auth_credentials": {
    "email": "admin@rootly.com",
    "password": "Admin123!",
    "login_endpoint": "/api/v1/auth/login",
    "login_port": 8080
  },
  "timeout_seconds": 30,
  "min_users": 1,
  "max_users": 3000,
  "user_step": 50,
  "ramp_up_period_s": 1,
  "requests_per_user": 1,
  "cooldown_between_tests_s": 0,
  "tests_per_set": 10,
  "cooldown_between_sets_s": 5,
  "auto_find_failure_point": true,
  "failure_threshold_percent": 50,
  "max_auto_users": 10000,
  "use_threads": true,
  "max_workers": 500,
  "endpoints": [
    {
      "name": "data_ingestion",
      "method": "POST",
      "path": "/ingest",
      "port": 8005,
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "id_controller": "FARM-001",
        "soil_humidity": 45.5,
        "air_humidity": 62.3,
        "temperature": 24.8,
        "light_intensity": 15000.0
      }
    },
    {
      "name": "graphql_analytics",
      "method": "POST",
      "path": "/api/v1/graphql",
      "port": 8080,
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "query": "query GetPlantMetrics($plantId: ID!) { plant(id: $plantId) { id name metrics { temperature humidity soilMoisture } } }",
        "variables": {
          "plantId": "1"
        }
      }
    }
  ]
}
