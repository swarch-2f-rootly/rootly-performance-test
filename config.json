{
  "base_url": "http://192.168.1.100",
  "auth_token": null,
  "auth_credentials": {
    "email": "Admin@rootly.com",
    "password": "Admin123!",
    "login_endpoint": "/api/auth/login",
    "login_port": 8000
  },
  "timeout_seconds": 30,
  "user_counts": [1, 5, 10, 25, 50, 100, 200, 500, 1000, 1500, 2000, 2500, 3000],
  "ramp_up_period_s": 1,
  "requests_per_user": 1,
  "use_threads": true,
  "max_workers": 500,
  "endpoints": [
    {
      "name": "data_ingestion",
      "method": "POST",
      "path": "/measurements",
      "port": 8080,
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "deviceId": "sensor-001",
        "temperature": 25.5,
        "humidity": 60.0,
        "soilMoisture": 45.0,
        "timestamp": null
      }
    },
    {
      "name": "graphql_analytics",
      "method": "POST",
      "path": "/api/v1/graphql",
      "port": 8081,
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "query": "query GetPlantMetrics($plantId: ID!) { plant(id: $plantId) { id name metrics { temperature humidity soilMoisture } } }",
        "variables": {
          "plantId": "1"
        }
      }
    }
  ]
}
